@model IEnumerable<Post>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- START SECTION -->
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="section-title">Recent Posts</h2>
                <p class="section-description">Laudantium ullam consequatur repellat debitis maxime.</p>
            </div>
            @foreach (Post item in Model)
            {
                <div class="col-md-4">
                    <div class="entry">
                        <div class="entry-media">
                            <a href="#" title="">
                                <span class="absolute-wrapper"></span>
                                <img src="~/images/@item.Photo" alt="" class="img-responsive" />
                            </a>
                        </div>
                        <h3 class="entry-title"><a href="#" title="2 Best Sites to Build Your Own Website">@item.Title</a></h3>
                        <p>@item.Description</p>
                        <a href="#" title="Learn More" class="btn read-more btn-sm btn-primary">Learn More</a>
                    </div><!--/.entry-->
                </div>
            }
        </div>

        <!--/.row-->
    </div>

    <!--/.container-->

</div>
